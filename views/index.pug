doctype html 
html(lang="en") 
  head 
    title= 'Node.js Template'
    link(rel='stylesheet', type='text/css', href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css')
    link(rel='stylesheet', type='text/css', href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css")
  body 
    div.container-flui.dh-100.d-flex.align-items-center.justify-content-center
      div.justify-content-center
        if data.error
          div.alert.alert-danger
            h4.alert-heading Error!
            p.mb-0 #{data.error}
        div.top50.mt-4
          form(action="/",method="POST")
            h2 Email Verification Example.
            div.form-floating.mt-4
              div.input-group
                span.input-group-text Email 
                input.form-control(type="text", name="email", placeholder="Enter Email")
              div.d-flex.align-items-center.justify-content-center
                button.mt-3.btn.btn-primary Validate
        div.justify-content-center.top50.mt-4
          if data.message
            ul.list-group
              li.list-group-item
                p
                  if data.message == "Success"
                    i.bi.bi-check-circle-fill.text-success
                    span  Provided email is valid
